<block tiki:for="{{[8, 1, 2]}}">
  <view class="line-label">GAME</view>

  <view class="chosen-item" style="background-color: #fff0de; border-bottom: 1px solid #d1d1d1;">
    <label class="chosen-item-label" >
      Snake {{item}}
    </label>
    <icon type="arrow_right" class="icon-arrow" color="grey"/>
    <label class="need-setting">
      Bạn chưa cài đặt cho game
    </label>
  </view>

  <view class="blank-1"></view>
  <view class="del-btn-container">
    <button class="del-btn" style="background-color: #5bc7c9; border-color: #5bc7c9;">
      <view class="del-label">
        Xóa game
      </view>
      <icon type="minus" class="icon-arrow" color="white" size="20"/>
    </button>

    <button class="modify-btn" style="margin-left:1%;">
      <view class="modify-label">
        Cài đặt
      </view>
      <icon type="setting" class="icon-arrow" color="white" size="20"/>
    </button>

  </view>
  <view class="blank-2"></view>

  <view class="line-label">PHẦN THƯỞNG KHI THẮNG</view>

  <block tiki:for="{{[8, 1, 2]}}">
