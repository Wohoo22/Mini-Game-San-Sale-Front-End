<block tiki:for="{{winPrizes}}">
  <view class="chosen-item">
    <label class="chosen-item-label">
      {{item}}
    </label>
    <icon type="arrow_right" class="icon-arrow" color="grey"/>
  </view>

  <view class="blank-1"></view>

  <view class="del-btn-container">
